#!/usr/bin/env perl

use warnings;
use strict;

# connect to the database
use DBI;
my $dbh = DBI->connect("dbi:Pg:dbname=rideshare","","");

my $event_id = $ARGV[0] or die "event_id ?";

print "==> $event_id\n";
my $statement = "INSERT INTO event VALUES(DEFAULT, $event_id, now())";
$dbh->do($statement);
