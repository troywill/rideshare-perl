#!/usr/bin/env perl

use warnings;
use strict;

# connect to the database
use DBI;
my $dbh = DBI->connect("dbi:Pg:dbname=rideshare","","");

if ($ARGV[0] == 1) {
    my $statement = "INSERT INTO event VALUES(DEFAULT, 1, now())";
    $dbh->do($statement);
}
if ($ARGV[0] == 2) {
    my $statement = "INSERT INTO event VALUES(DEFAULT, 2, now())";
    $dbh->do($statement);
}
