#!/usr/bin/env perl

use warnings;
use strict;

# connect to the database
use DBI;
my $dbh = DBI->connect("dbi:Pg:dbname=rideshare","","");

my $statement = "SELECT id,event_id, timestamp FROM event order by id";
my $array_ref = $dbh->selectall_arrayref($statement);

foreach my $myRow (@$array_ref) {
  print "-" x 40, "\n";
  my ( $id, $event, $timestamp ) = @$myRow;
  print "id: $id\n";
  print "event: $event\n";
  print "timestamp: $timestamp\n";
}

$dbh->disconnect();
